            <Script>-- These actions are performed when the Back button is clicked.

-- go back to the previous screen
Screen.Back();
</Script>
         </Event>
         <Event>
            <Name>On Next</Name>
            <Args/>
            <Script>-- These actions are performed when the Next button is clicked.
-- Tip: this is where you could add actions to validate the
--      user's input before proceeding

local bHasItems = DlgListBox.GetCount(CTRL_LIST_BOX) &gt; 0;
local nSelectedCount = DlgListBox.GetSelectedCount(CTRL_LIST_BOX);

-- display a warning if the list isn't empty and there is no item selected, 
-- otherwise advance to the next screen
if( bHasItems and (nSelectedCount &lt; 1)) then
	local strTitle = SetupData.GetLocalizedString("MSG_NOTICE");
	local strPrompt = SetupData.GetLocalizedString("MSG_LIST_BOX_SELECT_AN_ITEM");
	Dialog.Message(strTitle, strPrompt, MB_OK, MB_ICONEXCLAMATION);
else
	-- advance to the next screen
	Screen.Next();
end
</Script>
         </Event>
         <Event>
            <Name>On Cancel</Name>
            <Args/>
            <Script>-- These actions are performed when the Cancel button is clicked.

-- from _SUF70_Global_Functions.lua:
-- ask user if they're sure they want to exit
if g_ConfirmSetupAbort() then
	Application.Exit(EXIT_REASON_USER_ABORTED);
end
</Script>
