<ActionTemplates>
   <Action>
      <Name>HTTP.Download</Name>
      <Description>Downloads a file from an Internet Web site.</Description>
      <ReturnValueType/>
      <Arguments>
         <Arg>
            <Name>URL</Name>
            <Description>The full URL to the file that will be downloaded.</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"http://www.mydomain.com/myfile.exe"</Default>
               <DataType>string</DataType>
               <Constraints>1,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Filename</Name>
            <Description>The filename that the download will be saved as.</Description>
            <Type>string</Type>
            <Default/>
            <Required>1</Required>
            <EasyMode>
               <Default>"C:\\Downloads\\myfile.exe"</Default>
               <DataType>proj_folder</DataType>
               <Constraints/>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Mode</Name>
            <Description>The formatting mode of the file that will be saved.</Description>
            <Type>number</Type>
            <Default>MODE_BINARY</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>MODE_BINARY</Default>
               <DataType>combo</DataType>
               <Constraints>MODE_BINARY,MODE_TEXT</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Timeout</Name>
            <Description>The connection timeout.</Description>
            <Type>number</Type>
            <Default>20</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>20</Default>
               <DataType>number</DataType>
               <Constraints>0,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>Port</Name>
            <Description>The port to use, generally this should remain 80.</Description>
            <Type>number</Type>
            <Default>80</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>80</Default>
               <DataType>number</DataType>
               <Constraints>0,*</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>AuthData</Name>
            <Description>A table of HTTP basic authentication information that will be used in order to gain access to the file.</Description>
            <Type>table</Type>
            <Default>nil</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>nil</Default>
               <DataType>table</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>ProxyData</Name>
            <Description>A table of proxy information that will be used in order to gain access to the file. You can pass nil (the default) to use the default proxy settings that are currently configured through Internet Explorer.</Description>
            <Type>table</Type>
            <Default>nil</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>nil</Default>
               <DataType>table</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
         <Arg>
            <Name>CallbackFunction</Name>
            <Description>A function that will be called with progress information if default progress handling is not desired.</Description>
            <Type>function</Type>
            <Default>nil</Default>
            <Required>0</Required>
            <EasyMode>
               <Default>nil</Default>
               <DataType>function</DataType>
               <Constraints>none</Constraints>
            </EasyMode>
         </Arg>
      </Arguments>
   </Action>
